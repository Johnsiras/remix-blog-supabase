{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production remix build && run-p build:*",
    "build:css": "cross-env NODE_ENV=production tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "remix build && run-p dev:*",
    "dev:css": "postcss -w ./styles/app.css -o app/styles/app.css",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production node ./index.js"
  },
  "dependencies": {
    "@remix-run/express": "^1.2.2",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.2.2",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@supabase/supabase-js": "^1.35.3",
    "@tailwindcss/typography": "^0.5.2",
    "@types/react-select": "^5.0.1",
    "classnames": "^2.3.1",
    "compression": "^1.7.4",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "framer-motion": "^6.3.3",
    "marked": "^4.0.15",
    "marked-react": "^1.1.1",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-quilljs": "^1.2.17",
    "react-select": "^5.3.2",
    "react-spring": "^9.4.5",
    "remix": "^1.2.2",
    "remix-validated-form": "^4.4.3",
    "tabler-icons-react": "^1.48.0",
    "zod": "^3.15.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.2",
    "@types/classnames": "^2.3.1",
    "@types/marked": "^4.0.3",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.7",
    "daisyui": "^2.14.3",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
